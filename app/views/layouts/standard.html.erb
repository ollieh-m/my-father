<!DOCTYPE html>
<html class='no-js'>
  <head>
    <%= render('head') %>
  </head>

  <body>
    <div class='flash-alert'>
      <%= flash[:alert] %>
    </div>

    <aside class='standard'>
      <%= render('navigation') %>
    </aside>

    <main class='standard'>
      <%= yield %>
    </main>

    <% if admin_access? %> 
      <%= link_to 'TO ADMIN AREA', admin_part_sections_path(params[:part_id] || 1), class: 'button button__primary to-admin' %>
    <% end %>
  </body>
</html>
