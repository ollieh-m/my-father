<div class='new-version field'>
  <div class='input__label'><%= vf.label :document, 'Select attachment' %></div>
  <div><%= vf.file_field :document %></div>
  <div><%= vf.object.document_cache_name %></div>

  <% vf.object.errors.messages.values.flatten.each do |error| %>
    <div><%= error %></div>
  <% end %>
  
  <%= vf.hidden_field :document_cache %>
</div>