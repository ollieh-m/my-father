<ul class='menu'>
  <% @parts.each do |part| %>
  	<div class="menu__section">
	    <li class='menu__section-header' data-id='<%= part.id %>'><%= part.title %></li>
	    <% part.sections_by_position.each do |section| %>
	    	<div class="menu__link">
	    		<%= link_to part_section_path(part_id: part, id: section) do %>
		    		<li class="menu__link__with-header <%= 'active' if current_section == section %>" data-parent-id='<%= part.id %>'>
		    			<%= section.title %>	
		    		</li>
		    	<% end %>
	    		<div class="arrow arrow-left <%= 'active' if current_section == section %> standard"></div>
	    	</div>
	    <% end %>
	  </div>
  <% end %>

  <div class="menu__link menu__section">
  	<%= link_to about_path do %>
  		<li class="menu__section-header">About</li>
  	<% end %>
  	<div class="arrow arrow-left <%= 'active' if controller_name == 'abouts' %> standard"></div>
  </div>
</ul>
